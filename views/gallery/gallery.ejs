<!DOCTYPE html>
<html>
    <% include ../page/head.ejs %>
    <link rel="stylesheet" href="/stylesheets/slideshow.css">
</head>
<body>

    <% include ../page/header.ejs %>

    <div id="header">
        <div id="slideshow">
            <% galleries.forEach(function(gallery, index) { %>
                <% if (typeof gallery['dataValues']['cover'] != 'undefined') { %>
                    <div class="slide" style="background-image: url(<%= gallery['dataValues']['cover'] %>);"></div>
                <% } %>
            <% }); %>
        </div>
        <div class="header-content">
            <h1><%= title %></h1>
            <% if (typeof subtitle != 'undefined') { %>
                <h2><%= subtitle %></h2>
            <% } %>
        </div>
    </div>


    <div id="content" class="gallery">
    <div class="header-bottom"></div>

        <div class="container-fluid">
            <div class="col-sm-12 col-md-12 main">
                <div class="row placeholders">
                <% if (!galleries[0]['dataValues']['url']) { %>
                    <h1 class="heading text-center">Nothing here yet ...</h1>
                <% } else { %>
                    <% galleries.forEach(function(gallery, index) { %>
                        <% if (gallery['dataValues']['thumb']) { %>
                            <a href="<%= gallery['dataValues']['url'] %>">

                                <div class="col-xs-12 col-sm-6 col-md-3 item">

                                    <div class="item-container">
                                        <% if (gallery['dataValues']['city']) { %>
                                            <h4 class="location"><%= gallery['dataValues']['city'] %></h4>
                                        <% } else { %>
                                            <h4 class="location"><%= gallery['dataValues']['country'] %></h4>
                                        <% } %>
                                        <h5 class="date"><%= gallery['dataValues']['month'] %> <%= gallery['dataValues']['year'] %></h5>
                                        <img src="<%= gallery['dataValues']['thumb'] %>" class="img-responsive thumb" alt="Gallery thumbnail" width="100%">

                                    </div>
                                </div>
                            </a>
                        <% }; %>
                    <% }); %>
                <% }; %>
                </div>
            </div>
        </div>

    </div>

    <% include ../page/jsdefaults.ejs %>
    <script src="/javascripts/cover.js"></script>

</body>
</html>
