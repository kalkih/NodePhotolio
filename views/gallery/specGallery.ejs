<!DOCTYPE html>
<html>
    <% include ../page/head.ejs %>
    <link rel="stylesheet" href="/stylesheets/background.css">
</head>
<body>
    <% include ../page/header.ejs %>
    <% include ../page/background.ejs %>
    <div id="content" class="gallery gallerySpec">
        <div class="container-fluid">
            <div class="col-sm-12 col-md-12 main">
                <h1 class="gallery-name"><%= title %></h1>
                <div class="row">
                <% photos.forEach(function(photo, index) { %>

                        <div class="col-xs-12 col-sm-6 col-md-3 item">

                            <div class="item-container">
                                <img src="/thumb<%= photo['dataValues']['url'] %>" class="img-responsive thumb" alt="photo thumbnail">

                            </div>
                        </div>
                <% }); %>
                </div>
                <h2 class="gallery-name"><a href="/gallery"><i class="fa fa-arrow-left"></i> Go back</a></h2>
            </div>
        </div>

    </div>
    <% include ../page/jsdefaults.ejs %>
    <script src="/javascripts/gallery.js"></script>

</body>
</html>
