<!DOCTYPE html>
<html>
  <% include page/head.ejs %>
  </head>
<body>
    <% include page/header.ejs %>

    <div id="content" class="dashboard">

    <div class="container">
        <div class="row">
            <div class="col-centered" style="max-width: 200px">


                <form class="form-horizontal" method="POST" action="/login">
                    <h1>Login</h1>
                    <fieldset>

                        <div class="control-group">
                              <label class="control-label" for="username"></label>
                              <div class="controls">
                                <input id="username" name="username" type="text" placeholder="Username" class="input-xlarge" required="">

                              </div>
                        </div>

                        <div class="control-group">
                              <label class="control-label" for="password"></label>
                              <div class="controls">
                                <input id="password" name="password" type="password" placeholder="Password" class="input-xlarge" required="">
                              </div>
                        </div>

                        <div class="control-group">
                              <label class="control-label" for="login"></label>
                              <div class="controls">
                                <button id="login" name="login" class="btn btn-primary">Login</button>
                              </div>
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    </div>

    <% include page/jsdefaults.ejs %>

</body>
</html>
