<!DOCTYPE html>
<html>
<% include ../page/head.ejs %></head>
<body>
    <% include ../page/header.ejs %>

    <div id="content" class="dashboard">

    <div class="container">
        <div class="row">
            <div class="col-centered" style="max-width: 200px">
                <form class="form-horizontal" method="POST" action="/dashboard/upload" enctype="multipart/form-data">
                    <h1>Upload</h1>
                    <fieldset>

                      <!-- File Button -->
                      <div class="control-group">
                        <label class="control-label" for="photo">Photo</label>
                        <div class="controls">
                          <input id="photo" name="photos" class="input-file" type="file" multiple>
                        </div>
                      </div>

                      <!-- Text input-->
                      <div class="control-group">
                        <label class="control-label" for="country">Country</label>
                        <div class="controls">
                          <input id="country" name="country" type="text" placeholder="" class="input-medium" required="">

                        </div>
                      </div>

                      <!-- Text input-->
                      <div class="control-group">
                        <label class="control-label" for="city">City</label>
                        <div class="controls">
                          <input id="city" name="city" type="text" placeholder="" class="input-medium">
                          <p class="help-block">Optional</p>
                        </div>
                      </div>

                      <!-- Text input-->
                      <div class="control-group">
                        <label class="control-label" for="year">Year</label>
                        <div class="controls">
                          <input id="year" name="year" value="2015" type="number" placeholder="2015" class="input-small">
                        </div>
                      </div>

                      <!-- Select Basic -->
                      <div class="control-group">
                        <label class="control-label" for="month">Month</label>
                        <div class="controls">
                          <select id="month" name="month" class="input-small">
                            <option>January</option>
                            <option>February</option>
                            <option>March</option>
                            <option>April</option>
                            <option>May</option>
                            <option>June</option>
                            <option>July</option>
                            <option>August</option>
                            <option>September</option>
                            <option>November</option>
                            <option>Decemeber</option>
                          </select>
                        </div>
                      </div>

                      <!-- Button -->
                      <div class="control-group">
                        <label class="control-label" for="upload"></label>
                        <div class="controls">
                          <button id="upload" name="upload" class="btn btn-primary">Upload</button>
                        </div>
                      </div>

                  </fieldset>
                </form>
        <!-- Content end -->
    </div>

    <% include ../page/footer.ejs %>

    <% include ../page/jsdefaults.ejs %>

</body>
</html>
